{
  "name": "typescript-live-reload",
  "version": "1.0.0",
  "description": "Un projet TypeScript avec live reload pour HTML",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "tsc --watch",
    "start": "lite-server --baseDir=.",
    "dev": "concurrently \"pnpm run webpack --watch\" \"pnpm run start\"",
    "webpack": "webpack --config webpack.config.js --watch"
  },
  "devDependencies": {
    "@types/drawflow": "^0.0.12",
    "concurrently": "^9.0.1",
    "css-loader": "^7.1.2",
    "lite-server": "^2.5.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "drawflow": "^0.0.60",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
